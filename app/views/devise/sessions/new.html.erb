<h2 class="text-2xl font-bold mb-6 text-center">Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :remember_me, class: "mr-2" %>
    <%= f.label :remember_me, class: "text-sm text-gray-700" %>
  </div>

  <div>
    <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>

<div class="mt-4 text-center text-sm">
  <%= link_to "Cadastrar", new_user_registration_path, class: "text-blue-500 hover:underline" %>
  |
  <%= link_to "Esqueci minha senha", new_user_password_path, class: "text-blue-500 hover:underline" %>
</div>
