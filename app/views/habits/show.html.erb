<h2 class="text-2xl font-bold mb-4"><%= @habit.name %></h2>
<p class="text-gray-700 mb-6"><%= @habit.description %></p>

<div class="flex space-x-4">
  <%= link_to "Editar", edit_habit_path(@habit), class: "text-blue-500 hover:underline" %>
  <%= link_to "Voltar", habits_path, class: "text-gray-500 hover:underline" %>
</div>

<hr class="my-6">

<h3 class="text-lg font-semibold mb-3">Progresso</h3>

<% if @habit.completions.where(date: Date.today).exists? %>
  <p class="text-green-600">✅ Hábito já completado hoje!</p>
<% else %>
  <%= button_to "Marcar como feito hoje", completions_toggle_path(@habit), method: :post, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded" %>
<% end %>
