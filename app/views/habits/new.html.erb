<%= form_with model: @habit, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
  </div>

  <%= form.submit "Salvar", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
