<h2 class="text-2xl font-bold mb-6">Seus hábitos</h2>

<%= link_to "Novo Hábito", new_habit_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded mb-6 inline-block" %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @habits.each do |habit| %>
    <div class="bg-white rounded-xl shadow p-4 flex flex-col justify-between">
      <div>
        <h3 class="text-lg font-semibold text-gray-800"><%= habit.name %></h3>
        <p class="text-gray-500 text-sm mt-1"><%= habit.description %></p>
      </div>
      <div class="mt-4 flex justify-between items-center">
        <%= link_to "Ver", habit_path(habit), class: "text-sm text-blue-500 hover:underline" %>
        <%= link_to "Excluir", habit_path(habit), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-sm text-red-500 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
